<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:vm="clr-namespace:ChessDB.ViewModels"
             x:DataType="vm:PlayersViewModel"
             x:Class="ChessDB.Views.PlayersView">

  <StackPanel Margin="12" Spacing="8">
    <TextBlock Text="Gestion des joueurs" FontSize="16"/>
    <StackPanel Orientation="Horizontal" Spacing="8">
      <TextBox Width="300" Watermark="Nom complet" Text="{Binding NewPlayerName, Mode=TwoWay}" />
      <Button Content="Ajouter" Command="{Binding AddPlayerCommand}" />
    </StackPanel>

    <TextBlock Text="Liste des joueurs" Margin="0,8,0,0"/>
    <ListBox Items="{Binding Players}" Height="300">
      <ListBox.ItemTemplate>
        <DataTemplate>
          <StackPanel Orientation="Horizontal" Spacing="10">
            <TextBlock Text="{Binding FullName}" Width="250"/>
            <TextBlock Text="{Binding Elo}" />
          </StackPanel>
        </DataTemplate>
      </ListBox.ItemTemplate>
    </ListBox>
  </StackPanel>
</UserControl>

