<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:vm="clr-namespace:ChessDB.ViewModels"
             x:DataType="vm:CompetitionsViewModel"
             x:Class="ChessDB.Views.CompetitionsView">

  <StackPanel Margin="12" Spacing="8">
    <TextBlock Text="Gestion des compétitions" FontSize="16"/>
    <StackPanel Orientation="Horizontal" Spacing="8">
      <TextBox Width="300" Watermark="Nom de la compétition" Text="{Binding NewCompetitionName, Mode=TwoWay}" />
      <Button Content="Créer" Command="{Binding AddCompetitionCommand}" />
    </StackPanel>

    <TextBlock Text="Compétitions" Margin="0,8,0,0"/>
    <ListBox Items="{Binding Competitions}" Height="200">
      <ListBox.ItemTemplate>
        <DataTemplate>
          <StackPanel>
            <TextBlock Text="{Binding Name}" FontWeight="Bold"/>
            <TextBlock Text="{Binding PlayerIds.Count, StringFormat='Joueurs: {0}'}"/>
          </StackPanel>
        </DataTemplate>
      </ListBox.ItemTemplate>
    </ListBox>
  </StackPanel>
</UserControl>
