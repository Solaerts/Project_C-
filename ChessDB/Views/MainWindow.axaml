<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:vm="clr-namespace:ChessDB.ViewModels"
        xmlns:views="clr-namespace:ChessDB.Views"
        x:Class="ChessDB.Views.MainWindow"
        Title="Chess DB" Width="900" Height="600">

  <Window.DataContext>
    <vm:MainWindowViewModel />
  </Window.DataContext>

  <DockPanel LastChildFill="True">
    <TextBlock Text="Chess DB — Projet" FontSize="18" Margin="10" DockPanel.Dock="Top"/>
    <TabControl>
      <TabItem Header="Joueurs">
        <views:PlayersView/>
      </TabItem>
      <TabItem Header="Compétitions">
        <views:CompetitionsView/>
      </TabItem>
      <TabItem Header="Parties">
        <views:GamesView/>
      </TabItem>
    </TabControl>
  </DockPanel>
</Window>
