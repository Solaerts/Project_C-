<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:vm="using:ChessDB.ViewModels"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:views="clr-namespace:ChessDB.Views"
        mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="600"
        x:Class="ChessDB.Views.MainWindow"
        x:DataType="vm:MainWindowViewModel"
        Icon="/Assets/avalonia-logo.ico"
        Title="Chess Federation Manager">

    <Design.DataContext>
        <vm:MainWindowViewModel/>
    </Design.DataContext>

    <TabControl Margin="5">
        
        <TabItem Header="Joueurs" FontSize="16">
            <views:PlayersView DataContext="{Binding PlayersVM}"/>
        </TabItem>

        <TabItem Header="CompÃ©titions" FontSize="16">
            <views:CompetitionsView DataContext="{Binding CompetitionsVM}"/>
        </TabItem>

        <TabItem Header="Matchs" FontSize="16">
            <views:GamesView DataContext="{Binding GamesVM}"/>
        </TabItem>

    </TabControl>

</Window>