<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             x:Class="Chess_DB.Views.CompetitionsView">

  <StackPanel Margin="20" Spacing="15">

    <TextBlock Text="Créer une compétition" FontSize="20"/>

    <StackPanel Orientation="Horizontal" Spacing="10">
      <TextBox Width="200" Text="{Binding NewCompetitionName}"/>
      <Button Content="Ajouter" Command="{Binding AddCompetition}"/>
    </StackPanel>

    <Separator/>

    <TextBlock Text="Liste des compétitions" FontSize="18"/>

    <ListBox Items="{Binding Competitions}" SelectedItem="{Binding SelectedCompetition}">
      <ListBox.ItemTemplate>
        <DataTemplate>
          <TextBlock Text="{Binding Name}"/>
        </DataTemplate>
      </ListBox.ItemTemplate>
    </ListBox>

    <Separator/>

    <TextBlock Text="Inscrire un joueur à la compétition" FontSize="18"/>

    <StackPanel Orientation="Horizontal" Spacing="10">
      <ComboBox Items="{Binding Players}"
                SelectedItem="{Binding SelectedPlayerToAdd}"
                Width="200"
                DisplayMemberPath="FullName"/>
      <Button Content="Inscrire" Command="{Binding AddPlayerToCompetition}"/>
    </StackPanel>

  </StackPanel>
</UserControl>
