<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             x:Class="Chess_DB.Views.GamesView">

  <StackPanel Margin="20" Spacing="15">

    <TextBlock Text="Encodage d une partie" FontSize="20"/>

    <TextBlock Text="CompÃ©tition"/>
    <ComboBox Items="{Binding Competitions}"
              SelectedItem="{Binding SelectedCompetition}"
              DisplayMemberPath="Name"/>

    <TextBlock Text="Joueur blanc"/>
    <ComboBox Items="{Binding Players}"
              SelectedItem="{Binding SelectedWhite}"
              DisplayMemberPath="FullName"/>

    <TextBlock Text="Joueur noir"/>
    <ComboBox Items="{Binding Players}"
              SelectedItem="{Binding SelectedBlack}"
              DisplayMemberPath="FullName"/>

    <TextBlock Text="Coups (format libre)"/>
    <TextBox AcceptsReturn="True" Height="80" Text="{Binding Moves}"/>

    <TextBlock Text="Gagnant"/>
    <ComboBox Items="{Binding Players}"
              SelectedItem="{Binding SelectedWinner}"
              DisplayMemberPath="FullName"/>

    <Button Content="Enregistrer la partie"
            Command="{Binding SaveGame}"/>

  </StackPanel>
</UserControl>
